<% layout('layouts/boilerplate')%>
<h1>Login</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <button class="btn btn-success">Login</button>
</form>
<hr>
<form action="/login" method="POST">
    <input type="hidden" id="username" name="username" value="test">
    <input type="hidden" id="password" name="password" value="test">
    <div class="d-grid gap-2">
        <button class="btn btn-success">Login As Test User</button>
    </div>
</form>
